@model koclukyonetim.Models.Account.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Yönetim Paneli | Oturum Açın</title>
    @await Html.PartialAsync("~/Views/Shared/_head_css.cshtml")
</head>
<body>
    <div>
        <div class="container-fluid p-0">
            <div class="row g-0">
                <div class="col-lg-4">
                    <div class="authentication-page-content p-4 d-flex align-items-center min-vh-100">
                        <div class="w-100">
                            <div class="row justify-content-center">
                                <div class="col-lg-9">
                                    <div>
                                        <div class="text-center">
                                            <div>
                                                <a href=@Url.Action("anasayfa", "yonetim") class="">
                                                    <img src="~/assets/images/logo-dark.png" alt="" height="20" class="auth-logo logo-dark mx-auto">
                                                    <img src="~/assets/images/logo-light.png" alt="" height="20" class="auth-logo logo-light mx-auto">
                                                </a>
                                            </div>

                                            <h4 class="font-size-18 mt-4">Tekrar Hoşgeldiniz!</h4>
                                            <p class="text-muted">Yönetim Paneline devam etmek için oturum açın.</p>
                                        </div>

                                        <p class="p-0">
                                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                        </p>
                                        <div class="p-2">
                                            <form class="" method="post" action=@Url.Action("oturumac", "yonetim")>

                                                <div class="mb-3 auth-form-group-custom mb-4">
                                                    <i class="ri-user-2-line auti-custom-input-icon"></i>
                                                    <label for="username">Kullanıcı Adı</label>
                                                    @Html.EditorFor(x=> x.AccountName,
                                                    new { htmlAttributes = new { @class="form-control", placeholder="Kullanıcı adınızı giriniz..."}, id="username", type="text"} )
                                                </div>

                                                <div class="mb-3 auth-form-group-custom mb-4">
                                                    <i class="ri-lock-2-line auti-custom-input-icon"></i>
                                                    <label for="userpassword">Şifre</label>
                                                    @Html.EditorFor(x=> x.Password,
                                                    new { htmlAttributes = new { @class="form-control", placeholder="Şifrenizi giriniz..."}, id="userpassword", type="password"} )
                                                </div>

                                                <div class="mt-4 text-center">
                                                    <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Giriş Yap</button>
                                                </div>
                                             
                                            </form>
                                        </div>

                                        <div class="mt-5 text-center">
                                            <p>
                                                ©
                                                <script>document.write(new Date().getFullYear())</script> Dersflix Koçuk Yönetim Paneli <br /> İkifikir İletişim tarafından hazırlandı
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="authentication-bg">
                        <div class="bg-overlay"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
