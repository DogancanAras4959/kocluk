@model kocluk.SERVICES.Dtos.BookingData.BookingDto

@{
    ViewData["Title"] = "Randevu Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin:0 auto; max-width:800px;">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <form class="" enctype="multipart/form-data" method="post" action=@Url.Action("randevuguncelle", "uygulama")>

                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    @Html.HiddenFor(x=> x.Id)
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="username">Randevu Adı</label>
                                @Html.EditorFor(x=> x.BookingName,
                                new { htmlAttributes = new { @class="form-control", placeholder="Randevu adı giriniz..."}, id="username", type="text", @required = "required"} )
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="mb-3">
                                <label for="username">Başlangıç</label>

                                @Html.EditorFor(x=> x.BookingTime,
                                new { htmlAttributes =
                                new { @class="form-control",
                                placeholder="Başlangıç zamanını seçin",
                                @type="datetime-local",
                                @required="required"}})
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-3">
                                <label for="username">Öğrenci</label>
                                @Html.DropDownListFor(x => x.StudentId, (SelectList)ViewBag.Students, "Öğrenci Seçiniz", new { @class = "form-select", id = "validationCustom03", @required = "" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="mb-3">
                                <label for="username">Öğretmen</label>
                                @Html.DropDownListFor(x => x.UserId, (SelectList)ViewBag.Teachers, "Öğretmen Seçiniz", new { @class = "form-select", id = "validationCustom03", @required = "" })

                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-3">
                                <label for="username">Ders</label>
                                @Html.DropDownListFor(x => x.StudyId, (SelectList)ViewBag.Studies, "Ders Seçiniz", new { @class = "form-select", id = "validationCustom03", @required = "" })

                            </div>
                        </div> 
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-check form-switch mb-3" dir="ltr">
                                @Html.CheckBoxFor(x => x.IsActive, new { @class = "form-check-input", id = "customSwitch1" })
                                <label class="form-check-label" for="customSwitch1">Aktif mi?</label>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Randevuyu Güncelle</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>